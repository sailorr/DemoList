<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始" />


    <me.sailor.demolist.ui.system_about.anim.CountDownProgressBar
        android:id="@+id/cpb_countdown"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        app:countDown_centerTextColor="#2395FF"
        app:countDown_centerTextSize="25dp"
        app:countDown_circleWidth="4dp"
        app:countDown_firstColor="@color/gray2"
        app:countDown_isShowGradient="true"
        app:countDown_secondColor="@color/blue" />


    <me.sailor.demolist.ui.widget.CountDownView
        android:layout_marginStart="150dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"

        android:id="@+id/count"
        android:layout_height="wrap_content"
/>
    <TextView
        android:id="@+id/tv_time"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginTop="100dp"
        android:layout_marginStart="150dp"
        android:textSize="80sp" />

</LinearLayout>
